            <LoadingMovieCard />
            <LoadingMovieCard />
            <LoadingMovieCard />
            <LoadingMovieCard />
            <LoadingMovieCard />
            <LoadingMovieCard />
            <LoadingMovieCard />
        </div>
    </div>
{{/if}}

</GeneralContainer>

